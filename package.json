{
	"name": "kiro-node",
	"version": "1.0.0",
	"description": "Anthropic Claude API 兼容代理服务 - Node.js 版本",
	"main": "src/index-new.js",
	"type": "module",
	"scripts": {
		"start": "node src/index-new.js",
		"dev": "node --watch src/index-new.js",
		"migrate": "node src/migrate.js",
		"verify": "node verify-migration.js",
		"lint": "biome check src/",
		"lint:fix": "biome check --write src/",
		"format": "biome format --write src/",
		"pm2": "pm2 start ecosystem.config.cjs",
		"pm2:start": "pm2 start ecosystem.config.cjs",
		"pm2:stop": "pm2 stop kiro2api-node",
		"pm2:restart": "pm2 restart kiro2api-node",
		"pm2:reload": "pm2 reload kiro2api-node",
		"pm2:delete": "pm2 delete kiro2api-node",
		"pm2:logs": "pm2 logs kiro2api-node --lines 100",
		"pm2:monit": "pm2 monit",
		"pm2:status": "pm2 status",
		"pm2:save": "pm2 save",
		"pm2:dev": "pm2 start ecosystem.config.cjs --env development",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:quick": "node benchmark/quick-test.js",
		"test:load": "node benchmark/load-test.js",
		"test:load:light": "node benchmark/load-test.js --c 5 --d 10",
		"test:load:medium": "node benchmark/load-test.js --c 20 --d 30",
		"test:load:heavy": "node benchmark/load-test.js --c 50 --d 60"
	},
	"dependencies": {
		"better-sqlite3": "^11.10.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^4.18.2",
		"helmet": "^8.1.0",
		"https-proxy-agent": "^7.0.6",
		"node-fetch": "^3.3.2",
		"tiktoken": "^1.0.22",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.15",
		"@vitest/coverage-v8": "^4.0.18",
		"vitest": "^4.0.18"
	}
}
